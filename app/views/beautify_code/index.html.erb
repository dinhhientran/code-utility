<div class="row h1-row">
  <div class="col-md-5">
    <h1>Beautify Code</h1>
  </div>
  <div class="col-md-7 text-md-right text-sm-left link-copy" style="display: none">
    <span class="share-link btn-outline-primary"></span> <button class="btn btn-outline-secondary copy"><i class="fas fa-copy"></i></button>
  </div>
</div>
<div class="row input-options mb-4">
  <div class="col col-md-4 col-sm-12 mt-4">
    <div class="float-left mb-sm-3 mb-md-0">
      <label>Language</label>
      <select id="language"></select>
    </div>
  </div>
  <div class="col col-md-4 col-sm-12 mt-4 option-column">
  </div>
  <div class="col col-md-2 mt-4 text-md-right text-sm-left">
    <div>
      <label>Theme</label>
      <select id="theme">
        <option value="light">Light</option>
        <option value="dark">Dark</option>
      </select>
    </div>
  </div>
</div>
<div class="row row-eq-height">
  <div class="col col-md-10 col-sm-12 source-column">
    <div class="row">
      <div class="col-md-12">
        <textarea id="source"></textarea>
      </div>
    </div>
  </div>
  <div class="col-md-2 col-sm-12 align-self-center text-center button-column mt-sm-4 mt-md-0" style="min-height: 400px">
    <div class="d-flex h-25 align-items-md-start">
        <button id="beautify-btn" class="btn btn-primary" style="width: 100%;"><i class="fas fa-code"></i> Beautify</button>
    </div>
    <div class="d-flex h-25 align-items-end">
      <div class="w-100">
        <button id="upload-btn" class="btn btn-outline-primary mt-4" style="width: 100%;"><i class="fas fa-upload"></i> Upload</button>
        <form id="source_file_form" enctype="multipart/form-data" method="post" name="source_file">
          <input type="file" style="display: none" name="file" />
        </form>
        <button data-toggle="modal" data-target="#download_file_name_modal" class="btn btn-outline-primary mt-4" style="width: 100%;"><i class="fas fa-download"></i> Download</button>
      </div>
    </div>
    <div class="d-flex h-50 align-items-end">
      <div class="w-100">
        <button id="share-btn" class="btn btn-outline-primary" style="width: 100%;"><i class="fas fa-share-alt"></i> Share</button>
        <button id="fork-btn" class="btn btn-outline-primary mt-2" style="width: 100%;"><i class="fas fa-code-branch"></i> Fork</button>
        <button id="new-btn" class="btn btn-outline-primary mt-2" style="width: 100%;"><i class="fas fa-plus"></i> New</button>
      </div>
    </div>
  </div>
</div>